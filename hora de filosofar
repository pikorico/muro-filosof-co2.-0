    <h3>Reflexiones de otros estudiantes:</h3>
    <div id="reflexionesContainer"></div>
  </div>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
    import { getFirestore, collection, addDoc, getDocs } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyDRIJXjmI9AOp7avFtes-e3SQ2W6d5Ph_g",
      authDomain: "muro-filosofico.firebaseapp.com",
      projectId: "muro-filosofico",
      storageBucket: "muro-filosofico.appspot.com",
      messagingSenderId: "67690213464",
      appId: "1:67690213464:web:9aa256cb22077ec4615a2d"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    const frases = [
      "Solo s√© que nada s√©. ‚Äì S√≥crates",
      "El hombre est√° condenado a ser libre. ‚Äì Sartre",
      "Pienso, luego existo. ‚Äì Descartes",
      "La vida no examinada no vale la pena ser vivida. ‚Äì S√≥crates",
      "Dios ha muerto. ‚Äì Nietzsche"
    ];

    const preguntas = [
      "¬øQu√© significa para ti la libertad?",
      "¬øEs m√°s importante la verdad o la felicidad?",
      "¬øQu√© te hace ser t√∫?",
      "¬øExiste el destino o todo es casualidad?",
      "¬øQu√© valoras m√°s: lo que tienes o lo que eres?"
    ];

    document.getElementById("frase").innerText = frases[Math.floor(Math.random() * frases.length)];
    document.getElementById("pregunta").innerText = "üó®Ô∏è " + preguntas[Math.floor(Math.random() * preguntas.length)];

    async function enviarReflexion() {
      const reflexion = document.getElementById("reflexionInput").value.trim();
      if (reflexion === "") return alert("Escribe una reflexi√≥n antes de enviar.");
      await addDoc(collection(db, "reflexiones"), {
        texto: reflexion,
        timestamp: Date.now()
      });
      document.getElementById("reflexionInput").value = "";
      obtenerReflexiones();
    }

    async function obtenerReflexiones() {
      const querySnapshot = await getDocs(collection(db, "reflexiones"));
      const container = document.getElementById("reflexionesContainer");
      container.innerHTML = "";
      querySnapshot.forEach((doc) => {
        const r = document.createElement("p");
        r.textContent = "üìù " + doc.data().texto;
        container.appendChild(r);
      });
    }

    obtenerReflexiones();
  </script>

